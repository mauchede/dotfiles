docker-ip() {
    docker inspect --format "{{ .NetworkSettings.IPAddress }}" "$1"
}

history-clean() {
    > ~/.bash_history
    history -c
}

alias l="ls -lh --color"

alias ll="ls -lh --color"

alias lla="ll -a --color"

alias ssh-unsafe="ssh -o 'StrictHostKeyChecking=no' -o 'UserKnownHostsFile /dev/null'"

alias {up,..}="cd .."
