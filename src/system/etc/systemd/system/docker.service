[Install]
WantedBy=multi-user.target

[Service]
Delegate=yes
KillMode=process
LimitCORE=infinity
LimitNOFILE=infinity
LimitNPROC=infinity
TimeoutStartSec=0
Type=notify

ExecReload=/bin/kill \
    --signal HUP \
    "${MAINPID}"

ExecStart=/usr/local/sbin/dockerd \
    --bip 172.17.42.1/16 \
    --dns 172.17.42.1 \
    --host fd://

[Unit]
After=network.target
Requires=docker.socket
