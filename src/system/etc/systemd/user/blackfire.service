[Install]
WantedBy=default.target

[Service]
EnvironmentFile=%h/.env
Environment="IMAGE=blackfire/blackfire:latest"
Environment="NAME=blackfire-%u"
Restart=always
TimeoutStartSec=0

ExecStart=/usr/local/sbin/docker \
    run \
    --env BLACKFIRE_SERVER_ID \
    --env BLACKFIRE_SERVER_TOKEN \
    --name "${NAME}" \
    "${IMAGE}"

ExecStop=/usr/local/sbin/docker \
    stop \
    "${NAME}"

ExecStopPost=/usr/local/sbin/docker \
    rm \
    --force \
    --volumes \
    "${NAME}"
