#!/bin/sh

USER=$(/usr/bin/id -nu)
HOME=$(/usr/bin/getent passwd $USER | cut -d: -f6)

[ ! -f $HOME/.psql_history ] && touch $HOME/.psql_history

docker run \
    -i \
    -t=$([ -t 0 ] && echo "true" || echo "false") \
    -u "$USER" \
    -v /etc/group:/etc/group:ro \
    -v /etc/passwd:/etc/passwd:ro \
    -v /etc/localtime:/etc/localtime:ro \
    -v "$HOME:$HOME" \
    --net host \
    --rm \
    ${IMAGE:-postgres}:${TAG:-9.4} /usr/lib/postgresql/9.4/bin/psql "$@"
