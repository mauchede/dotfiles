#!/bin/sh

UID=$(/usr/bin/id -u)
HOME=$(/usr/bin/getent passwd $UID | cut -d: -f6)

docker run \
    -i \
    -t=$([ -t 0 ] && echo "true" || echo "false") \
    -u $UID \
    -v /etc/group:/etc/group:ro \
    -v /etc/passwd:/etc/passwd:ro \
    -v /etc/localtime:/etc/localtime:ro \
    -v "$HOME:$HOME" \
    --net host \
    --rm \
    ${IMAGE:-mysql}:${TAG:-5.6} /usr/bin/mysql "$@"
