#!/bin/bash
set -e

TTY=$([ -t 0 ] && echo "true" || echo "false")
USER=$(id -u)
HOME=$(getent passwd $USER | cut -d: -f6)

[[ -z $VERSION ]] && VERSION="5.6"

docker run \
    -e HOME=$HOME \
    -i \
    --net host \
    --rm \
    -t=$TTY \
    -u $USER \
    -v $HOME:$HOME \
    mysql:$VERSION mysql "$@"
