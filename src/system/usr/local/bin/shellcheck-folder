#!/bin/sh
set -e

# check bash

grep --files-with-matches --recursive "${PWD}" --regexp "^#\!/bin/bash" | grep --invert-match "\.git" | xargs --no-run-if-empty shellcheck --shell bash

# check shell

grep --files-with-matches --recursive "${PWD}" --regexp "^#\!/bin/sh" | grep --invert-match "\.git" | xargs --no-run-if-empty shellcheck --shell sh
